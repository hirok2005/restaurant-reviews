{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true
    },
    "extends": "standard",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "ignorePatterns": ["index.js", "app.test.js"],
    "rules": {
        "semi": [
            2,
            "always"
        ],
        "indent": "off"
    }
}